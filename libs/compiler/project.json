{
	"name": "compiler",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "library",
	"sourceRoot": "libs/compiler/src",
	"tags": [],
	"targets": {
		"build": {
			"cache": true,
			"outputs": ["{workspaceRoot}/libs/compiler/build"],
			"executor": "@monodon/rust:napi",
			"options": {
				"dist": "libs/compiler/build",
				"jsFile": "index.js"
			},
			"configurations": {
				"production": {
					"release": true
				}
			}
		},
		"post-build": {
			"cache": false,
			"executor": "nx:run-commands",
			"dependsOn": ["build"],
			"options": {
				"command": "pnpm run build:copy-types && pnpm run build:dts && pnpm run build:typecheck && pnpm run build:docs",
				"cwd": "libs/compiler"
			}
		},
		"test": {
			"dependsOn": ["test:rust", "test:js", "test:typecheck"]
		},
		"test:rust": {
			"cache": false,
			"executor": "@monodon/rust:test",
			"outputs": ["{options.target-dir}"],
			"options": {
				"target-dir": "libs/compiler/target"
			},
			"configurations": {
				"production": {
					"release": true
				}
			}
		},
		"test:js": {
			"cache": true,
			"executor": "nx:run-commands",
			"dependsOn": ["build", "post-build"],
			"options": {
				"command": "bun test",
				"cwd": "libs/compiler"
			}
		},
		"test:typecheck": {
			"cache": true,
			"executor": "nx:run-commands",
			"dependsOn": ["build", "post-build"],
			"options": {
				"command": "pnpm run test:typecheck",
				"cwd": "libs/compiler"
			}
		},
		"lint:rust": {
			"cache": false,
			"executor": "@monodon/rust:lint",
			"outputs": ["{options.target-dir}"],
			"options": {
				"target-dir": "libs/compiler/target"
			}
		},
		"format:rust": {
			"cache": true,
			"executor": "nx:run-commands",
			"options": {
				"command": "cargo fmt",
				"cwd": "libs/compiler"
			}
		},
		"lint:js": {
			"cache": true,
			"executor": "nx:run-commands",
			"options": {
				"command": "biome check . --write --unsafe",
				"cwd": "libs/compiler"
			}
		},
		"format:js": {
			"cache": true,
			"executor": "nx:run-commands",
			"options": {
				"command": "biome format --write .",
				"cwd": "libs/compiler"
			}
		},
		"lint": {
			"dependsOn": ["lint:rust", "lint:js"]
		},
		"format": {
			"dependsOn": ["format:rust", "format:js"]
		}
	}
}
