{
  "name": "compiler",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/compiler/src",
  "tags": [],
  "targets": {
    "build": {
      "cache": true,
      "outputs": [
        "{workspaceRoot}/libs/compiler/build"
      ],
      "executor": "@monodon/rust:napi",
      "options": {
        "dist": "libs/compiler/build",
        "jsFile": "index.js"
      },
      "configurations": {
        "production": {
          "release": true
        }
      }
    },
    "test": {
      "dependsOn": ["test:rust", "test:js"]
    },
    "test:rust": {
      "cache": false,
      "executor": "@monodon/rust:test",
      "outputs": [
        "{options.target-dir}"
      ],
      "options": {
        "target-dir": "libs/compiler/target"
      },
      "configurations": {
        "production": {
          "release": true
        }
      }
    },
    "test:js": {
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "bun test",
        "cwd": "libs/compiler"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "cache": true,
      "executor": "@monodon/rust:lint",
      "outputs": [
        "{options.target-dir}"
      ],
      "options": {
        "target-dir": "libs/compiler/target"
      }
    },
    "format": {
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo fmt",
        "cwd": "libs/compiler"
      }
    },
    "format:check": {
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo fmt -- --check",
        "cwd": "libs/compiler"
      }
    }
  }
}
