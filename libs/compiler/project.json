{
  "name": "compiler",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/compiler/src",
  "tags": [],
  "targets": {
    "build": {
      "cache": true,
      "outputs": [
        "{workspaceRoot}/libs/compiler"
      ],
      "executor": "@monodon/rust:napi",
      "options": {
        "dist": "libs/compiler",
        "jsFile": "index.js"
      },
      "configurations": {
        "production": {
          "dist": "dist/compiler",
          "release": true
        }
      }
    },
    "test": {
      "cache": true,
      "executor": "@monodon/rust:test",
      "outputs": [
        "{options.target-dir}"
      ],
      "options": {
        "target-dir": "dist/target/compiler"
      },
      "configurations": {
        "production": {
          "release": true
        }
      }
    },
    "lint": {
      "cache": true,
      "executor": "@monodon/rust:lint",
      "outputs": [
        "{options.target-dir}"
      ],
      "options": {
        "target-dir": "dist/target/compiler"
      }
    }
  }
}
