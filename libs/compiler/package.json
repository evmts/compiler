{
	"name": "@compiler/compiler",
	"version": "0.0.0",
	"scripts": {
		"build:copy-types": "cp src/types/*.d.ts build/",
		"build:dts": "node ./scripts/postbuild-dts.js",
		"build:docs": "node ./scripts/postbuild-generate-docs.js",
		"build:typecheck": "tsc build/*.d.ts --noEmit",
		"test:typecheck": "tsc --project tsconfig.json --noEmit --skipLibCheck"
	},
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"napi": {
		"binaryName": "compiler",
		"packageName": "@compiler/compiler",
		"targets": [
			"aarch64-apple-darwin",
			"aarch64-unknown-linux-gnu",
			"aarch64-unknown-linux-musl",
			"aarch64-pc-windows-msvc",
			"armv7-unknown-linux-gnueabihf",
			"x86_64-unknown-linux-musl",
			"x86_64-unknown-freebsd",
			"x86_64-apple-darwin",
			"i686-pc-windows-msvc",
			"wasm32-wasip1-threads"
		]
	},
	"engines": {
		"node": ">= 10"
	},
	"dependencies": {
		"@types/bun": "^1.3.0",
		"typescript": "^5.9.3"
	},
	"devDependencies": {
		"@noble/hashes": "^1.8.0",
		"@shazow/whatsabi": "^0.23.0",
		"@tevm/memory-client": "1.0.0-next.148"
	}
}
